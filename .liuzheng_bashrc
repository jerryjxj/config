export PS1='\033[1;32;48m[\033[1;31;48m\u\033[1;31;48m@\033[4;32;48m\h\033[0;32;48m:\033[1;32;40m\w\033[0;32;48m\033[1;32;48m]     \033[1;32;40m>>\t<<\033[0;32;49m\n\[\033[1;31;48m\]\$ \[\e[0m\]'
bind '"\e[A": history-search-backward'
bind '"\e[B": history-search-forward'

#===================alias=======================
# ls
